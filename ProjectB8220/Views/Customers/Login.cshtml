@model Project.Models.DataModels.Customer

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Login</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<!--=============================================
=            Login Register page content         =
=============================================-->
<main class="page-section inner-page-sec-padding-bottom" method="POST">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-3 mb--30 mb-lg--0">
            </div>
            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                    @using (Html.BeginForm())
                    {
                        <div class="login-form">
                            <h4 class="login-title">Login Form</h4>
                            @if (ViewBag.err != null)
                            {
                                <p class="alert alert-danger">@ViewBag.err</p>
                            }
                            <div class="row">
                                <div class="col-md-12 col-12 mb--15">
                                    <label for="email">Email</label>
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-12 mb--20">
                                    <label for="password">Password</label>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    <a href="#" class="forget-pass">Forgotten Password</a>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-outlined">Login</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
        </div>
    </div>
</main>
